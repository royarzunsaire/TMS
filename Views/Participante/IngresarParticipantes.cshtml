                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        @Html.ActionLink("Volver", "List", new { id = Model.idComercializacion }, new { @class = "btn btn-default" })
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" id="btnGuardar" value="Guardar" class="btn btn-primary" />
                    </div>
