@model SGC.Models.DocumentoCompromiso

@{
    ViewBag.Title = "Detalles del Documento de Compromiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Detalles</h2>

<div class="row">
    <div class="col-md-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    Documento de Compromiso
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.tipoVenta.tipoPago, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.tipoVenta.tipoPago, new { htmlAttributes = new { @class = "form-control ver", @readonly = "readonly" } })
                        </div>
                    </div>
                    @if (Model.tipoVenta.tipoPago == SGC.Models.TipoPago.Otic)
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("OTIC", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.tipoVenta.otic.nombre, new { htmlAttributes = new { @class = "form-control ver", @readonly = "readonly" } })
                            </div>
                        </div>
                    }
                    @if (Model.tipoDocCompromiso != null)
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.tipoDocCompromiso, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.tipoDocCompromiso.nombre, new { htmlAttributes = new { @class = "form-control ver", @readonly = "readonly" } })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.tipoDocCompromiso, htmlAttributes: new { @class = "control-label" })
                                <div class="form-control ver"> OC </div>
                            </div>
                        </div>
                    }
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.numeroSerie, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.numeroSerie, new { htmlAttributes = new { @class = "form-control ver", @readonly = "readonly" } })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label" })
                            <div class="form-control ver">
                                @Html.DisplayFor(model => model.monto)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        @Html.Label("", "Archivo", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @if (Model.documento != null)
                        {
                            <i class="fa fa-download"></i>
                            @Html.ActionLink(Model.documento.nombreArchivo, "Descargar", new { id = Model.documento.idStorage }, new { })
                        }
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-default" onclick="javascript:history.back()">Volver</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>