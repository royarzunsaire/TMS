@model List<SGC.Models.R19>

@{
    ViewBag.Title = "Encuesta de Reacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Resultados R19</h2>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    Resultados
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    @foreach (var r19 in Model)
                    {
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>R19</h3>
                                </div>
                                @foreach (var seccionEncuesta in r19.encuesta.seccionEncuesta)
                                {
                                    <div class="col-md-12">
                                        <h4>Sección</h4>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <div class="row">
                    @foreach (var r19 in Model)
                    {
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>R19</h3>
                                </div>
                                @foreach (var seccionEncuesta in r19.encuesta.seccionEncuesta)
                                {
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4>Sección</h4>
                                            </div>
                                            @foreach (var pregunta in seccionEncuesta.formulario.preguntasFormularios)
                                            {
                                            <div class="col-md-12">
                                                <p>Pregunta</p>
                                            </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        @Html.ActionLink("Volver", "List", "Participante", new { id = Model.FirstOrDefault().comercializacion.idComercializacion }, new { @class = "btn btn-default" })
                    </div>
                    <div class="col-md-6">
                        <input id="btnSubmit" type="submit" value="Guardar" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>