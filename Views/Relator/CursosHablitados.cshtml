@model SGC.Models.Relator

@{
    ViewBag.Title = "ListadoCursosHabilitado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cursos Habilitados</h2>

<div class="portlet light bordered">
    <div class="portlet-body form">
        <table class="table table-striped table-bordered table-hover dt-responsive dataTable no-footer" id="sys-table">
            <thead>
                <tr>
                    <th>
                        Curso
                    </th>
                    <th>
                        Tipo de Ejecución
                    </th>
                    <th>
                        Código
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.relatorCurso.Where(rc => rc.softDelete == false))
                {
                    if (item.curso.softDelete == false)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.curso.nombreCurso)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.curso.tipoEjecucion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.curso.codigoCurso)
                                @*TODO: mostrar codigo*@
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default" onclick="javascript:history.back()">Volver</button>
            </div>
        </div>
    </div>
</div>
