@model SGC.Models.R06_ActaReunion

<style>
    .container {
        padding-left: 0;
        position: relative;
        width: 100%;
    }

        .container img {
            height: auto;
        }

        .container .btn {
            position: absolute;
            top: 0%;
            left: 0%;
            transform: translate(3%, 3%);
            background-color: #555;
            border: none;
        }

            .container .btn:hover {
                background-color: black;
            }
</style>



@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h2 class="page-title">Detalles de la reunión</h2>


<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            Detalles del documento
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="javascript:;" class="fullscreen"> </a>
        </div>
        <div class="actions" style="margin-right: 15px">
        </div>
    </div>
    <div class="portlet-body form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.usuarioCreador)
                    @Html.EditorFor(model => model.usuarioCreador.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.dateCreation, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.dateCreation, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.usuarioUltimaEdicion, htmlAttributes: new { @class = "control-label" })
                    @Html.DisplayFor(model => model.usuarioUltimaEdicion.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.dateEdited, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.dateEdited, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                </div>
            </div>
        </div>

    </div>
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la Reunión
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse"> </a>
                <a href="javascript:;" class="fullscreen"> </a>
            </div>
            <div class="actions" style="margin-right: 15px">
            </div>
        </div>
        <div class="portlet-body form">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.horarioInicio, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.horarioInicio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.horarioTermino, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.horarioTermino, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.temasTratados, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.temasTratados, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.acuerdos, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.acuerdos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "border: 0px" } })
                    </div>
                </div>

            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h4> Participantes </h4>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <table class="table table-striped table-bordered table-hover dt-responsive" id="dataTable" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                        Empresa / Área
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="tbody">
                                
                                @foreach (var item in Model.ParticipantesReunion)
                                {
                                    <tr>

                                        @Html.AntiForgeryToken()
                                        <td>
                                            @item.nombre
                                        </td>
                                        <td>
                                            @item.telefono
                                        </td>
                                        <td>
                                            @item.empArea
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div>
    <button type="button" class="btn btn-default" onclick="javascript:history.back()">Volver</button>
</div>



