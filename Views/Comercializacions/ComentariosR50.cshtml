@model SGC.Models.Comercializacion

@{
    ViewBag.Title = "Comentarios R50";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title" style="margin-bottom: 0">
    <div class="row">
        <div class="col-md-12">
            Administrar Comercialización
        </div>
        <div class="col-md-12">
            <small>Comercialización: @Model.cotizacion.codigoCotizacion</small>
        </div>
    </div>
</div>

@using (Html.BeginForm("ComentariosR50", "Comercializacions", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        Comentarios R50
                    </div>
                </div>
                <div class="portlet-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idComercializacion)
                    <input type="hidden" name="idRelator" value="@ViewBag.idRelator" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.comentarioInstructor, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.comentarioInstructor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.comentarioInstructor, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @if (ViewBag.idRelator == 0)
                        { 
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.comentarioOtec, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.comentarioOtec, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.comentarioOtec, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group">
                            @*<div class="col-md-6">
                    @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-default" })
                </div>*@
                            <div class="col-md-12 text-right">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

