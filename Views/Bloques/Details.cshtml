@model SGC.Models.Bloque

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            Bloque
        </div>
    </div>
    <div class="portlet-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.horarioInicio, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.horarioInicio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.horarioTermino, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.horarioTermino, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="relator" class="control-label">Relator</label>
                    @Html.EditorFor(model => model.relator.contacto.nombreCompleto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="sala" class="control-label">Sala</label>
                    @Html.EditorFor(model => model.sala.nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lugarAlmuerzo" class="control-label">Lugar de Almuerzo</label>
                    @Html.EditorFor(model => model.lugarAlmuerzo.nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Coordinador" class="control-label">Coordinador</label>
                    @Html.EditorFor(model => model.coordinador.nombreCompleto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                
                </div>

            </div>
            <div class="col-md-8">
                @if (Model.linkAutomatic)
                {
                <div class="form-group">
                    <label for="linkAutomatic" class="control-label">Link Automatico</label>
                    <br>
                    @Html.Label( "El link se selecciona automaticamente en dependencia de la sala seleccionada", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })

                </div>
                }
                else
                {
                    <div class="form-group">
                        <label for="linkManual" class="control-label">Link Manual</label>
                        <a href="@Model.linkManual" style="border:0px" class="form-control text-box single-line">Enlace de Videollamada</a>
                         </div>
                }


            </div>

        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.ActionLink("Volver", "List", new { id = Model.comercializacion.idComercializacion }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Editar", "Edit", new { id = Model.idBloque }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>
