@model IEnumerable<SGC.Models.Bloque>

@{
    ViewBag.Title = "Listado Bloque";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado Bloque @Html.ActionLink(" ", "Create","/Create",htmlAttributes: new { @class = "btn btn-primary btn-large glyphicon glyphicon-plus" , @datatoggle = "tooltip", @title = "Nuevo"})
</h2>
<p>
   
</p>
<table class="table table-striped table-bordered table-hover dt-responsive dataTable no-footer">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.horarioInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horarioTermino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th></th>
    </tr>
</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.horarioInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.horarioTermino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.idBloque }, htmlAttributes: new { @class = "btn btn-warning  glyphicon glyphicon-edit", @datatoggle = "tooltip", @title = "Editar" }) 
            @Html.ActionLink(" ", "Details", new { id=item.idBloque }, htmlAttributes: new { @class = "btn btn-info glyphicon glyphicon-list", @datatoggle = "tooltip", @title = "Ver" }) 
            @Html.ActionLink(" ", "Delete", new { id=item.idBloque }, htmlAttributes: new { @class = "btn btn-danger glyphicon glyphicon-trash", @datatoggle = "tooltip", @title = "Borrar" })
        </td>
    </tr>
}
</tbody>
</table>
