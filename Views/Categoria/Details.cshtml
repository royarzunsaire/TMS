@model SGC.Models.Categoria

@{
    ViewBag.Title = "Detalles Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Detalles</h2>

<div class="portlet light bordered col-md-6">
    <div class="portlet-title">
        <div class="caption">
            Categoria
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                    <hr class="separador-ver" />
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "border: 0" } })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>

