@model IEnumerable<SGC.Models.Link>

@{
    ViewBag.Title = "Listado Links";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption">
            Links



        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="javascript:;" class="fullscreen"> </a>
        </div>
        <div class="actions">
            <div class="inputs pull-right">
                @Html.ActionLink("Nuevo", "Create", new { id = 0 }, new { @class = "btn btn-circle btn-sm btn-default btn-group-lg", @style = "margin-right:10px; margin-left:10px;" })
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover dt-responsive dataTable" id="sys-table" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.type)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type.nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Create", new { id = item.idLink }) |

                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idLink })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
