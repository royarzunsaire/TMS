@model SGC.Models.Link

@{
    ViewBag.Title = "Crear Links";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                Links
            </div>
        </div>
        <div class="portlet-body">
            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.idLink, new { htmlAttributes = new { @class = "form-control" } })
                <div class="form-group">
                    @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.type.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.type.idLinkType, new SelectList(ViewBag.type, "Value", "Text", Model.type == null ? " " : Model.type.idLinkType.ToString()), "Seleccione un Tipo", htmlAttributes: new { @class = "form-control select2", id = "idType" })
                        @Html.ValidationMessageFor(model => model.type.idLinkType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Volver", "Index")
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}










