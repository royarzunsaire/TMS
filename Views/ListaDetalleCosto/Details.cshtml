@model SGC.Models.ListaDetalleCosto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Nuevo Costo Fijo";
}

<h2 class="page-title">Administracion de Costos Fijos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        Nuevo Costo Fijo
                    </div>
                </div>
                <div class="portlet-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.detalle, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                @Html.EditorFor(model => model.detalle, new { htmlAttributes = new { @class = "form-control ver", @disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.cantidad, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                <div class="form-control ver">
                                    @Model.cantidad
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.valor, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                <div class="form-control ver">
                                    @String.Format("{0:C}", Model.valor)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.valorMinimo, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                <div class="form-control ver">
                                    @String.Format("{0:C}", Model.valorMinimo)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.valorMaximo, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                <div class="form-control ver">
                                    @String.Format("{0:C}", Model.valorMaximo)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.tipoEjecucion, htmlAttributes: new { @class = "control-label" })
                                <hr class="separador-ver" />
                                @Html.EditorFor(model => model.tipoEjecucion, new { htmlAttributes = new { @class = "form-control ver", @disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top:33px">
                            <div class="form-group">
                                @Html.LabelFor(model => model.porPersona, htmlAttributes: new { @class = "control-label" })
                                @if (Model.porPersona)
                                {
                                    <input type="checkbox" checked disabled />
                                }
                                else
                                {
                                    <input type="checkbox" disabled />
                                }
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}