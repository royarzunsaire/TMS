@model SGC.Models.Colors
@using (Html.BeginForm("ColorEdit", "System", FormMethod.Post, new { @class = "form-horizontal", role = "form", @Id = "edit-color" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ColorID)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Edit Color</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" data-dismiss="modal" class="btn btn-danger"><i class="fa fa-times"></i> Cancel</button>
                <button type="submit" value="Save" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Save</button>

            </div>
        </div>
    </div>
}
