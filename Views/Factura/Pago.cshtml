@model SGC.Models.Factura

@{
    ViewBag.Title = "Nueva Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Ingresar</h2>

@using (Html.BeginForm("Pago", "Factura", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        Pago
                    </div>
                </div>
                <div class="portlet-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idFactura)
                    <input type="hidden" name="idComercializacion" value="@ViewBag.idComercializacion" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.valorPagado, htmlAttributes: new { @class = "control-label" })
                                @*@Html.EditorFor(model => model.valorPagado, new { htmlAttributes = new { @class = "form-control currency", @type = "text" } })*@
                                @Html.EditorFor(model => model.valorPagado, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.valorPagado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.observacion, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.observacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.observacion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.ActionLink("Volver", "Facturas", new { id = ViewBag.idComercializacion }, new { @class = "btn btn-default" })
                            </div>
                            <div class="col-md-6 text-right">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

