@model SGC.Models.Mandante

@{
    ViewBag.Title = "Crear Mandante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-title">Crear</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="portlet light bordered col-md-6">
        <div class="portlet-title">
            <div class="caption">
                Mandante
            </div>
        </div>
        <div class="portlet-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombreMandante, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.nombreMandante, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombreMandante, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.rut, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.rut, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rut, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
