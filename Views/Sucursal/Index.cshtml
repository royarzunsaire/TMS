@model IEnumerable<SGC.Models.Sucursal>

@{
    ViewBag.Title = "Listado Sucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Administrar Sucursales</h2>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark">
            <div class="portlet-title">
                <div class="caption">
                    Sucursales
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover dt-responsive dataTable" id="sys-table" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.nombre)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td class="text-center">
                                        <div class="input-group-btn">
                                            @Html.ActionLink(" ", "Firma", new { id = item.idSucursal }, htmlAttributes: new { @class = "btn btn-default btn-sm glyphicon glyphicon-picture", @datatoggle = "tooltip", @title = "Firma Administrador" })
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>